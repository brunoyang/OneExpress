extends ../../admin_layout

block content
  p #{page}
  .container
    .row 
      a.btn.btn-success.col-md-1.col-md-offset-11(href="/admin/page/new") 增加页面
      table.table.table-hover.table-striped
        thead
          tr
            th 标题
            th 标签
            th 预览
            th 最后更新时间
            th 查看
            th 编辑
            th 删除
        tbody
          each page in pages
            tr(class="page-id-#{page._id}")
              td #{page.title}
              td #{page.tag}
              td #{page.content.substring(0, 20) + '...'}
              td #{moment(page.meta.createAt).format('YYYY/MM/DD hh:mm:ss')}
              td: a(href="/page/#{page.tag}", target="_blank") 查看
              td: a(href="/admin/page/update/#{page.tag}", target="_blank") 编辑
              td: button.btn.btn-danger.page-del(data-id="#{page._id}") 删除
     
block srcipt
  script(src="/p/js/func.js")