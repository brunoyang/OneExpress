extends ../admin_layout

block content
  .container
    .row
      a.btn.btn-success.col-md-2.col-md-offset-10(href="/admin/site/new") 增加快递网点
      table.table.table-hover.table-striped
        thead
          tr
            th 省
            th 市
            th 区
            th 详细地址
            th 固定电话
            th 负责人
            th 查看
            th 编辑
            th 删除
        tbody
          each site in sites
            tr(class="site-id-#{site._id}")
              td #{site.province}
              td #{site.city}
              td #{site.county}
              td #{site.address}
              td +#{site.areacode} #{site.telephone}
              td #{site.manager}
              td: a(href="/site/#{site._id}", target="_blank") 查看
              td: a(href="/admin/site/update/#{site._id}", target="_blank") 编辑
              td: button.btn.btn-danger.site-del(data-id="#{site._id}") 删除
block script
  script(src="/p/js/func.js")