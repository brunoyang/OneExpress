extends ../admin_layout

block content
  .container
    .row
      form.form-horizontal
        .form-group
          label.control-label.col-md-1(for="inputBill") 快递单号
          .col-md-10
            input.form-control(type="text", id="inputBill" value="#{id}")
          .col-md-1
            button#add-track.btn.btn-success 新增记录
      .col-md-10.col-md-offset-1
        table.table.table-hover.table-striped
          thead
            tr
              th 地址
              th 经手人
              th 状态
              th 操作
          tbody
            if tracklist
              each track in tracklist
                tr
                  td(width="30%") #{track.site}
                  td(width="30%") #{track.manager}
                  td(width="20%") #{track.status}
                  td(width="20%"): a.btn.btn-default.modify(href="javascript:;") 修改

block script
  script(type="text/javascript", src="/p/js/track.js")



