extends ../admin_layout

block content
  .container
    .row
      a.btn.btn-success.col-md-2.col-md-offset-10(href="/admin/user/new") 增加用户
      table.table.table-hover.table-striped
        thead
          tr
            th 用户名
            th 邮箱
            th 权限
            th 查看
            if role > 50
              th 编辑
              th 删除
        tbody
          each user in users
            tr(class="user-id-#{user._id}")
              td #{user.name}
              td #{user.email}
              if user.role === 0
                td 普通用户
              else if user.role === 21
                td 管理员
              else if user.role === 51
                td 超级管理员
              td: a(href="/admin/user/view/#{user._id}", target="_blank") 查看
              if role > 50
                td: a(href="/admin/user/update/#{user._id}", target="_blank") 编辑
                td: button.btn.btn-danger.user-del(data-id="#{user._id}") 删除
block script
  script(src="/p/js/func.js")