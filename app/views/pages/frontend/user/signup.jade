extends ../sign_layout

block css
  link(rel="stylesheet", href="/p/css/sign.css")

block content
  .dialog.dialog-signup
    form(method="post", action="/user/signup")
      .dialog-title
        .dialog-title-text
          h3 加入一通
      .dialog-content
        .dialog-form-row
          span.dialog-label-icon.icon-user &#xe602;
          input.dialog-user(required, name="user[name]", type="text", placeholder="用户名 输入数字、字母或下划线")
          span.dialog-check-icon.icon-check.h &#xea10;
        .dialog-form-row
          span.dialog-label-icon.icon-email &#xe600;
          input.dialog-email(required, name="user[email]", type="email", placeholder="邮箱")
          span.dialog-check-icon.icon-check.h &#xea10;
        .dialog-form-row.dialog-password
          span.dialog-label-icon.icon-pwd &#xe601;
          input(required, name="user[password]", type="password", placeholder="密码")
          span.dialog-show-password.icon-eye &#xe9ce;
      .dialog-msg
        p 
      .dialog-button
        input#dialog-signup-button(type="submit",value="注册")

block script
  script(type="text/javascript", src="/p/js/sign.js")
    
